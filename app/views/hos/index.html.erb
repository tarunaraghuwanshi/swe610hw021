<p id="notice"><%= notice %></p>

<h1>Listing Hos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hos.each do |ho| %>
      <tr>
        <td><%= ho.name %></td>
        <td><%= link_to 'Show', ho %></td>
        <td><%= link_to 'Edit', edit_ho_path(ho) %></td>
        <td><%= link_to 'Destroy', ho, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

